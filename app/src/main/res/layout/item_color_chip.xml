<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="6dp">

    <!-- Outer ring (shown when selected) -->
    <FrameLayout
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:gravity="center">

        <View
            android:id="@+id/viewSelectedRing"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_color_squircle_ring"
            android:visibility="gone" />

        <View
            android:id="@+id/viewChipColor"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_color_squircle" />

    </FrameLayout>

    <TextView
        android:id="@+id/tvChipLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="10sp"
        android:textAppearance="@style/TextAppearance.Material3.LabelSmall" />

</LinearLayout>
